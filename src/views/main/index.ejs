            <section class="seccion-trabajos-requeridos">
                <h3 class="section-header blackLetter"> Helpers más Requeridos</h3>
                <section class="sub-seccion-trabajos-requeridos">
                    <% helpermasbuscados.forEach(helper=>{%>


                        <div class="articulo-trabajo-mas-buscado white blueLetter border-line sobreado">
                            <p class="nombre-helper">
                                <%=helper.user.first_name%>
                                    <%=helper.user.last_name%>
                            </p>
                            <a href="http:/products/detail/<%=helper.id%>"><img class="imagen-trabajo" src="/images/userImage/<%= helper.user.filename%>" alt="">
                            </a><p>
                                <%=helper.oficio.name%>
                            </p>
                            <p>
                                $<%=helper.tarifa%> /h
                            </p>
                            <div class="interacciones">
                                <i class="fas fa-heart icon-helper"></i>
                                <i class="fas fa-share-alt icon-helper"></i>
                                <% if (user) {%>
                                <a href="/check-out/<%=helper.id%>"><i class="fas fa-shopping-cart icon-helper blueLetter"></i></a>
                                <% } %>
                            </div>
                        </div>
                        <%})%>



                </section>
            </section>
